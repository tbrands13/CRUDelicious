@using CRUDelicious.Models
@model Dish

<div class="d-flex justify-content-start">
<a href="/" class="btn btn-lg btn-outline-primary">Home</a>
</div>
<div class="mb-4">
<h1>@ViewBag.OneDish.Name</h1>
<h3>Chef: @ViewBag.OneDish.Chef</h3>
</div>
<div class="mb-4">
    <h5>Description: @ViewBag.OneDish.Description</h5>
    <h5>Calories: @ViewBag.OneDish.Calories</h5>
    <h5>Tastiness: @ViewBag.OneDish.Tastiness</h5>
    <h6>@ViewBag.OneDish.DishId</h6>
</div>
<div class="d-flex justify-content-around">
    <a href="/dishes/@ViewBag.OneDish.DishId/edit" class="btn btn-outline-warning">Fix Dish</a>
    <a href="/dishes/@ViewBag.OneDish.DishId/delete" class="btn btn-outline-danger">Delete</a>
</div>